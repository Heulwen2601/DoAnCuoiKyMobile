<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của EditText -->
    <solid android:color="#3D5CFF"/>

    <!-- Viền của EditText -->
    <stroke
        android:width="1dp"
        android:color="#D0D0D0"/> <!-- Màu và độ dày của viền -->

    <!-- Bo tròn các góc -->
    <corners android:radius="15dp"/> <!-- Bán kính bo tròn các góc -->

    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>