<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Viền dày bên ngoài -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E1F0FF"/> <!-- Màu viền bên ngoài -->
        </shape>
    </item>

    <!-- Hình oval bên trong (nút chính) -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp">
    <shape android:shape="oval">
        <solid android:color="#C7DCF3" /> <!-- Màu nền của nút -->
        <stroke
            android:width="2dp"
            android:color="#E1F0FF" /> <!-- Màu viền mỏng bên trong -->
        <padding
            android:left="16dp"
            android:top="16dp"
            android:right="16dp"
            android:bottom="16dp" />
    </shape>
</item>

    </layer-list>
